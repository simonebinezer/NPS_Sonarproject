// build.gradle

plugins {
    id 'java'  // Apply the Java plugin for a Java project
    id 'jacoco'  // Apply the Jacoco plugin for test coverage
    id 'org.sonarqube' version '3.4.0.2513'  // Apply the SonarQube plugin for analysis
}

group = 'com.example'
version = '1.0.0'

sourceCompatibility = '1.8'  // Java version compatibility

repositories {
    mavenCentral()  // Repository to fetch dependencies
}

dependencies {
    implementation 'org.springframework.boot:spring-boot-starter-web:2.7.0'  // Example dependency
    testImplementation 'org.junit.jupiter:junit-jupiter-api:5.7.0'  // JUnit for testing
    testImplementation 'org.junit.jupiter:junit-jupiter-engine:5.7.0'
}

test {
    useJUnitPlatform()  // Use JUnit 5 platform for testing
}

sonarqube {
    properties {
        property "sonar.projectKey", "NPS_Sonarproject"  // Your project key for SonarQube
        property "sonar.organization", "your-organization"  // Replace with your SonarQube organization
        property "sonar.host.url", "http://localhost:9000"  // Replace with your SonarQube server URL
    }
}

task clean(type: Delete) {
    delete rootProject.buildDir  // Clean the build directory
}
